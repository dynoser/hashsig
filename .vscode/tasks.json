{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build HashSig (CTRL+SHIFT+B)",
            "type": "shell",
            "command": "php",
            "args": [
                "-d", "xdebug.mode=off",
                "${workspaceFolder}/hashsig.php",
                "--pathfrom=${file}",
                "--write",
                "--nonsmap"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "default"
            },
            "options": {
                "env": {
                    "XDEBUG_CONFIG": "xdebug.remote_enable=0"
                }
            }
        },
        {
            "label": "Create HashSig (or reindex)",
            "type": "shell",
            "command": "php",
            "args": [
                "-d", "xdebug.mode=off",
                "${workspaceFolder}/hashsig.php",
                "--pathfrom=${file}",
                "--reindex",
                "--autonamebypath",
                "--nonsmap"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "Verify HashSig package",
            "type": "shell",
            "command": "php",
            "args": [
                "-d", "xdebug.mode=off",
                "${workspaceFolder}/hashsig.php",
                "--pathfrom=${file}",
                "--check",
                "--nonsmap"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}
